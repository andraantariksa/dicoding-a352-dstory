<resources>

    <style name="Theme.DStory" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>

        <item name="colorPrimary">@color/redish</item>
        <item name="colorSecondary">@color/pink</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.DStory.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DStory.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DStory.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <color name="redish">#FF5722</color>
    <color name="pink">#FBCABE</color>
</resources>